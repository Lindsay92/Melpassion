{% extends 'base-admin.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>Page d'accueil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ home.description|raw }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ home.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ home.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ home.updatedAt ? home.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_home_index') }}" class="btn btn-warning">Retour à la liste</a>

    <a href="{{ path('admin_home_edit', {'id': home.id}) }}" class="btn btn-success">Mettre à jour</a>

    {{ include('admin_home/_delete_form.html.twig') }}
{% endblock %}
