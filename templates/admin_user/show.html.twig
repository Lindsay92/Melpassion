{% extends 'base-admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index', {'role': role}) }}" class="btn btn-warning">Retour à la liste</a>

    <a href="{{ path('admin_user_edit', {'id': user.id, 'role': role}) }}" class="btn btn-success">Mettre à jour</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
